{
  "processors": [
    "stylelint-processor-styled-components"
  ],
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-styled-components"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-csstree-validator"
  ],
  "rules": {
    "max-nesting-depth": 1,
    "csstree/validator": true,
    "order/order": [
      "declarations"
    ],
    "order/properties-order": [
      [
        "display",
        "position",
        "margin",
        "margin-bottom",
        "margin-left",
        "margin-right",
        "margin-top",
        "padding",
        "padding-bottom",
        "padding-left",
        "padding-right",
        "padding-top",
        "height",
        "width",
        "max-height",
        "max-width"
      ],
      {
        "unspecified": "bottom"
      }
    ]
  }
}
